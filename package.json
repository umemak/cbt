{
  "name": "cbt",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "10"
  },
  "scripts": {
    "dev": "next \"src/app/\"",
    "serve": "cross-env NODE_ENV=production firebase serve",
    "deploy": "NODE_ENV=production firebase deploy",
    "clean": "rimraf \"dist/**\"",
    "build": "next build \"src/app/\"",
    "export": "next export \"src/app/\" && yarn clean && yarn build-public",
    "build-public": "cpx \"src/app/out/**/*.*\" \"dist/\" -C",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'; stylelint 'src/**/*.{css,jsx,tsx}'",
    "lint-fix": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}'; stylelint --fix 'src/**/*.{css,jsx,tsx}'",
    "lint-app": "eslint -c src/app/.eslintrc.js --ignore-path src/app/.eslintignore src/app",
    "typecheck-app": "tsc --project src/app",
    "precommit": "lint-staged",
    "predeploy": "yarn build && yarn export"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{css,jsx,tsx}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "commander": "^5.0.0",
    "csv-parse": "^4.8.8",
    "dotenv-webpack": "^1.7.0",
    "firebase": "^7.13.0",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.0",
    "fomantic-ui-css": "^2.8.4",
    "grpc": "^1.22.2",
    "next": "^9.3.4",
    "next-absolute-url": "^1.2.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-markdown": "^4.3.1",
    "semantic-ui-react": "^0.88.2",
    "styled-components": "^5.0.1",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@types/cpx": "^1.5.1",
    "@types/eslint": "^6.8.0",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/node": "^13.11.1",
    "@types/prettier": "^2.0.0",
    "@types/react": "^16.9.33",
    "@types/react-dom": "^16.9.6",
    "@types/rimraf": "^3.0.0",
    "@types/stylelint": "^9.10.1",
    "@types/yargs": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "firebase-functions-test": "^0.1.6",
    "firebase-tools": "^8.0.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.3.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^4.0.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^3.8.3"
  },
  "license": "MIT"
}
